@*<h1>Index of Employee</h1>*@
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employee List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="EmployeePayrollOperationController1" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Employee
            </a>
        </div>
    </div>
    <br /><br />


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Employee Name
            </th>
            <th>
                Basic Pay
            </th>
            <th>
               Start Date
            </th>
            <th>
                Address
            </th>
            <th>
                Gender
            </th>
            <th>
                Phone
            </th>
            <th>
                Department
            </th>
            <th>
                Deductions
            </th>
            <th>
                Taxable
            </th>
            <th>
                Income
            </th>
            <th>
                Net Pay
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="10%">
                    @obj.Name
                </td>
                <td width="10%">
                    @obj.BasicPay
                </td>
                <td width="15%">
                    @obj.Start_Date
                </td>
                <td width="10%">
                    @obj.Address
                </td>
                <td width="5%">
                    @obj.Gender
                </td>
                <td width="10%">
                    @obj.Phone
                </td>
                <td width="10%">
                    @obj.Department
                </td>
                <td width="10%">
                    @obj.Deductions
                </td>
                <td width="10%">
                    @obj.Taxable
                </td>
                <td width="10%">
                    @obj.IncomeTax
                </td>
                <td width="10%">
                    @obj.NetPay
                </td>
                <td width="20%">
                        <div class="w-55 btn-group" role="group">
                            @*Adding edit link to navigate to edit page*@
                            <a asp-controller="EmployeePayrollOperationController1" asp-action="Edit" asp-route-id="@obj.Id"
                            class="btn btn-outline-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>

                            <a asp-controller="EmployeePayrollOperationController1" asp-action="Delete" asp-route-Id="@obj.Id"
                           class="btn btn-outline-danger mx-2"><i class="bi bi-trash3-fill"></i>Delete</a>
                        </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
